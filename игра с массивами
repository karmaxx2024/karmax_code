for i in range(1 * 100 + 1):
    print(i)

    сounter_correct = 0
counter_uncorrect = 0


while True:
    answer = str(input('введите как будет медведь по англиски? '))
    if 'dog' != 'dog':
        print('не правельно собака не так пишется у вас если что было 3 попытки вы одну использовали значет 2 попытки осталось')
    else:
        print('правельно молодцы! Пойдёмте дальше.')

print(f'правельных ответов:{counter_correct}')
print(f'не правельных ответов:{counter_uncorrect}')

if counter_correct == 6:
        print('вы хорошо запомнили слова!')
elif 5 <= counter_correct <= 6:
        print('вы средне запомнили слова!')
else:
        print('вы не хорошо запомнили слова')
